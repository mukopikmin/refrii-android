<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.refrii.client">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activities.BoxActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.SigninActivity"
            android:label="@string/title_activity_signin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activities.FoodActivity"
            android:label="@string/title_activity_food"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".views.activities.NewFoodActivity"
            android:label="@string/title_activity_new_food"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activities.BoxInfoActivity"
            android:label="@string/title_activity_box_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activities.ErrorActivity"
            android:label="@string/title_activity_error"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.activities.WebViewActivity" />
        <activity
            android:name=".views.activities.UnitsActivity"
            android:label="@string/title_activity_units"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activities.UnitActivity"
            android:label="@string/title_activity_unit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activities.NewUnitActivity"
            android:label="@string/title_activity_new_unit"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>