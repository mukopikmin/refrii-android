<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.refrii.client">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".foodlist.FoodListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signin.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".food.FoodActivity"
            android:label="@string/title_activity_food"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/settings_title" />
        <activity
            android:name=".newfood.NewFoodActivity"
            android:label="@string/title_activity_new_food"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".boxinfo.BoxInfoActivity"
            android:label="@string/title_activity_box_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".webview.WebViewActivity" />
        <activity
            android:name=".unitlist.UnitListActivity"
            android:label="@string/title_activity_units"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".unit.UnitActivity"
            android:label="@string/title_activity_unit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".newunit.NewUnitActivity"
            android:label="@string/title_activity_new_unit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".shopplans.ShopPlansActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".notification.PushNotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>